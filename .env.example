# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Prismic Configuration
# Get these values from your Prismic repository settings
# https://your-repo-name.prismic.io/settings/apps/
NEXT_PUBLIC_PRISMIC_REPOSITORY_NAME=your-repo-name
PRISMIC_ACCESS_TOKEN=your-access-token-if-private-repo
PRISMIC_WEBHOOK_SECRET=your-webhook-secret

# Security Keys
# Generate secure random strings for these values
# You can use: openssl rand -base64 32
PREVIEW_SECRET=your-preview-secret-key
API_SECRET_KEY=your-api-secret-key

# Mailchimp Configuration (Optional)
# Get your API key from: https://mailchimp.com/account/api/
MAILCHIMP_API_KEY=your-mailchimp-api-key
# The data center is part of your API key (e.g., us1, us2, etc.)
MAILCHIMP_API_SERVER=us1
# Get your Audience ID from: Audience → Settings → Audience name and defaults
MAILCHIMP_AUDIENCE_ID=your-audience-id
# Optional: Webhook key for verifying Mailchimp webhooks
MAILCHIMP_WEBHOOK_KEY=your-webhook-key

# Optional: Analytics
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Optional: Upstash Redis for Rate Limiting
# Get these from: https://console.upstash.com/
# UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-redis-token