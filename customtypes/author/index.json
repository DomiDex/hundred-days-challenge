{
  "id": "author",
  "label": "Author",
  "format": "custom",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "Slug",
          "placeholder": "Author URL slug"
        }
      },
      "name": {
        "type": "Text",
        "config": {
          "label": "Name",
          "placeholder": "Author's full name"
        }
      },
      "role": {
        "type": "Text",
        "config": {
          "label": "Role",
          "placeholder": "Author's role or title"
        }
      },
      "avatar": {
        "type": "Image",
        "config": {
          "label": "Avatar",
          "constraint": {
            "width": 400,
            "height": 400
          },
          "thumbnails": [
            {
              "name": "thumbnail",
              "width": 150,
              "height": 150
            }
          ]
        }
      },
      "bio": {
        "type": "StructuredText",
        "config": {
          "label": "Biography",
          "placeholder": "Author's biography",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading3,heading4,heading5,heading6,strong,em,hyperlink,list-item,o-list-item"
        }
      },
      "linkedin_link": {
        "type": "Link",
        "config": {
          "label": "LinkedIn Profile",
          "placeholder": "Link to LinkedIn profile",
          "select": "web",
          "allowTargetBlank": true
        }
      },
      "x_link": {
        "type": "Link",
        "config": {
          "label": "X (Twitter) Profile",
          "placeholder": "Link to X/Twitter profile",
          "select": "web",
          "allowTargetBlank": true
        }
      },
      "github_link": {
        "type": "Link",
        "config": {
          "label": "GitHub Profile",
          "placeholder": "Link to GitHub profile",
          "select": "web",
          "allowTargetBlank": true
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "Page title for search engines (max 60 characters)"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Page description for search engines (max 160 characters)"
        }
      },
      "og_title": {
        "type": "Text",
        "config": {
          "label": "OpenGraph Title",
          "placeholder": "Title for social media sharing (defaults to Meta Title if empty)"
        }
      },
      "og_description": {
        "type": "Text",
        "config": {
          "label": "OpenGraph Description",
          "placeholder": "Description for social media sharing (defaults to Meta Description if empty)"
        }
      },
      "og_image": {
        "type": "Image",
        "config": {
          "label": "OpenGraph Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": []
        }
      },
      "twitter_card": {
        "type": "Select",
        "config": {
          "label": "Twitter Card Type",
          "placeholder": "Select Twitter card type",
          "options": ["summary", "summary_large_image"],
          "default_value": "summary"
        }
      },
      "canonical_url": {
        "type": "Text",
        "config": {
          "label": "Canonical URL",
          "placeholder": "Custom canonical URL (optional)"
        }
      },
      "robots": {
        "type": "Select",
        "config": {
          "label": "Robots Meta",
          "placeholder": "Search engine indexing",
          "options": ["index,follow", "noindex,follow", "index,nofollow", "noindex,nofollow"],
          "default_value": "index,follow"
        }
      }
    }
  }
}
