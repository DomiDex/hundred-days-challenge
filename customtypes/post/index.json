{
  "id": "post",
  "label": "Post",
  "format": "custom",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "Slug",
          "placeholder": "Post URL slug"
        }
      },
      "name": {
        "type": "Text",
        "config": {
          "label": "Name",
          "placeholder": "Post title"
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": [
            {
              "name": "thumbnail",
              "width": 400,
              "height": 300
            }
          ]
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "Category",
          "select": "document",
          "customtypes": ["category"]
        }
      },
      "publication_date": {
        "type": "Date",
        "config": {
          "label": "Publication Date",
          "placeholder": "Select publication date"
        }
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "Excerpt",
          "placeholder": "Brief description of the post"
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "customtypes": ["author"]
        }
      },
      "demo_link": {
        "type": "Link",
        "config": {
          "label": "Demo Link",
          "placeholder": "Link to live demo",
          "select": "web",
          "allowTargetBlank": true
        }
      },
      "github_link": {
        "type": "Link",
        "config": {
          "label": "GitHub Link",
          "placeholder": "Link to GitHub repository",
          "select": "web",
          "allowTargetBlank": true
        }
      },
      "article_text": {
        "type": "StructuredText",
        "config": {
          "label": "Article Text",
          "placeholder": "Main article content",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl",
          "labels": ["codespan", "highlight"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "Page title for search engines (max 60 characters)"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Page description for search engines (max 160 characters)"
        }
      },
      "og_title": {
        "type": "Text",
        "config": {
          "label": "OpenGraph Title",
          "placeholder": "Title for social media sharing (defaults to Meta Title if empty)"
        }
      },
      "og_description": {
        "type": "Text",
        "config": {
          "label": "OpenGraph Description",
          "placeholder": "Description for social media sharing (defaults to Meta Description if empty)"
        }
      },
      "og_image": {
        "type": "Image",
        "config": {
          "label": "OpenGraph Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": []
        }
      },
      "og_type": {
        "type": "Select",
        "config": {
          "label": "OpenGraph Type",
          "placeholder": "Content type",
          "options": ["article"],
          "default_value": "article"
        }
      },
      "article_author": {
        "type": "Text",
        "config": {
          "label": "Article Author",
          "placeholder": "Author name for structured data"
        }
      },
      "twitter_card": {
        "type": "Select",
        "config": {
          "label": "Twitter Card Type",
          "placeholder": "Select Twitter card type",
          "options": ["summary", "summary_large_image"],
          "default_value": "summary_large_image"
        }
      },
      "canonical_url": {
        "type": "Text",
        "config": {
          "label": "Canonical URL",
          "placeholder": "Custom canonical URL (optional)"
        }
      },
      "robots": {
        "type": "Select",
        "config": {
          "label": "Robots Meta",
          "placeholder": "Search engine indexing",
          "options": ["index,follow", "noindex,follow", "index,nofollow", "noindex,nofollow"],
          "default_value": "index,follow"
        }
      },
      "keywords": {
        "type": "Text",
        "config": {
          "label": "Keywords",
          "placeholder": "Comma-separated keywords for SEO"
        }
      }
    }
  }
}
