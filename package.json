{
  "name": "hundred-days",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:safe": "node --max-old-space-size=4096 ./node_modules/.bin/next build",
    "build:clean": "rm -rf .next && npm run build",
    "start": "next start",
    "lint": "next lint",
    "slicemachine": "npx start-slicemachine",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "next lint --fix",
    "prepare": "husky",
    "security:audit": "npm audit --production",
    "security:fix": "npm audit fix",
    "security:fix-force": "npm audit fix --force",
    "security:check": "npm audit --audit-level=moderate",
    "security:scan": "npm run security:check && npm run lint",
    "prebuild": "npm run security:check",
    "test": "node ./node_modules/jest/bin/jest.js",
    "test:watch": "node ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node ./node_modules/jest/bin/jest.js --coverage",
    "test:api": "node ./node_modules/jest/bin/jest.js --config jest.config.api.js",
    "test:api:coverage": "node ./node_modules/jest/bin/jest.js --config jest.config.api.js --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@mailchimp/mailchimp_marketing": "^3.0.80",
    "@prismicio/client": "^7.18.1",
    "@prismicio/next": "^2.0.1",
    "@prismicio/react": "^3.2.1",
    "@types/dompurify": "^3.0.5",
    "@types/prismjs": "^1.26.5",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.3",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "feed": "^5.1.0",
    "gsap": "^3.13.0",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.525.0",
    "next": "15.4.2",
    "prismjs": "^1.30.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sax": "^1.4.1",
    "statuses": "^2.0.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.14",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@slicemachine/adapter-next": "^0.3.81",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/mailchimp__mailchimp_marketing": "^3.0.21",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.16",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.2",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "slice-machine-ui": "^2.17.1",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "undici": "^7.13.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
